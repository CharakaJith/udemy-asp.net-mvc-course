@model Vidly.ViewModels.AllCustomersViewModel

@{

}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lumen.css" />
    <style>
        .custom-link:hover {
            text-decoration: underline;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>Customers</h2>
        <div>
            @Html.ActionLink("NEW CUSTOMER", "RegisterNewCustomer", "Customer", null, new { @class = "btn btn-primary" })
            <hr/>
        </div>
        
        @if (Model.Customers.Count == 0)
        {
            <p>There are no registered customers yet!</p>
        }
        else
        {
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 40%;">Name</th>
                        <th style="width: 40%;">Subscription</th>
                        <th style="width: 20%;">Discount Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(customer.Name, "UpdateCustomer", "customer", new { id = customer.Id })
                            </td>
                            <td>@customer.MembershipType.Name</td>
                            <td>@customer.MembershipType.DiscountRate %</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>

