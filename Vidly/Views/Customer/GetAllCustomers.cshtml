@model Vidly.ViewModels.AllCustomersViewModel

@{

}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lumen.css" />
</head>
<body>
    <div class="container mt-4">
        <h2>Customers</h2>
        @if (Model.Customers.Count == 0)
        {
            <p>There are no registered customers yet!</p>
        }
        else
        {
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 50%;">Name</th>
                        <th style="width: 50%;">Age</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>
                                <a class="nav-link text-dark" href="/customer/@customer.Id">
                                    @customer.Name
                                </a>
                            </td>
                            <td>@customer.Age</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>

