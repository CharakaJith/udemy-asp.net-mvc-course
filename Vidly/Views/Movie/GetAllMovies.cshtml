@model Vidly.ViewModels.AllMoviesViewModel

@{

}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lumen.css" />
    <style>
        .custom-link:hover {
            text-decoration: underline;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>Movies</h2>
        <div>
            @Html.ActionLink("NEW MOVIE", "RegisterNewMovie", "Movie", null, new { @class = "btn btn-primary" })
            <hr />
        </div>

        @if (Model.Movies.Count == 0) 
        {
            <p>There are no movies yet!</p>
        }
        else
        {
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 40%;">Name</th>
                        <th style="width: 40%;">Genre</th>
                        <th style="width: 20%;">Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.Movies)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(movie.Name, "UpdateMovie", "movie", new { id = movie.Id })
                            </td>
                            <td>@movie.Genre.Name</td>
                            <td>@movie.NumOfStocks</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>